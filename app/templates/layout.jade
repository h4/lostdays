div.page
    header.page-header
        h1.page-title
            Октябрь 2013
        a.pager-prev &lt;
        a.pager-next &gt;
    section.month
        header.weekdays
            each day in ['Sun', 'Mon', 'Tues', 'Wed', 'Thu', 'Fri', 'Sat']
                div.weekday= day
        section.days
            each week in days
                section.week
                    each day in week
                        article.day
                            h2.date= day
