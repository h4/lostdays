html
  height 100%

body
  font 12px/20px Verdana, sans-serif;
  min-height 100%
  margin 0
  padding 0
  background url(/i/bg.png) #ececec
  color: #3f3f3f

h1
  margin 0

h2
  margin 0

h3
  margin 0

.app
  position fixed
  top 7.3%
  right 7.3%
  bottom 7.3%
  left 7.3%

.page
  display flex
  flex-direction column
  height 100%
  border solid 1px #b4b4b4
  border-radius 3px

.page-header
  display flex
  flex-direction row
  align-items center
  height 68px
  border-bottom solid 1px #bec3cf
  background-cozlor #f2f3f6
  background-image -webkit-linear-gradient(top, #FFF, #e4e6ec)
  border-radius 3px 3px 0 0

.page-title
  font: bold 28px/1 Helvetica, Arial, serif;
  flex 1 0 0
  text-align center
  order 1
  color #717f9d

pager()
  position relative
  display block
  box-sizing border-box
  width 37px
  height 37px
  margin 21px
  padding 5px
  cursor pointer

  &:hover
    opacity .8

  &:active
    top: 2px

  &::before
    content ""
    position absolute
    left 0
    right 0
    top 0
    bottom 0

.pager-prev
  pager()
  order 0
  &::before
    background url(/i/arr_prev.png)

.pager-next
  pager()
  order 3
  &::before
    background url(/i/arr_next.png)

.month
  display flex
  flex-grow 1
  flex-direction column

.weekdays
  display flex
  align-items center
  flex-direction row
  height 30px

.weekday
  font: bold 12px/20px Helvetica, Arial, serif;
  flex 1 0 0
  text-align center
  height 20px
  padding 5px
  text-shadow 0 1px 1px rgba(#FFF, 1)
  background-color  #d2d5db
  background-image -webkit-linear-gradient(top, #ccced2, #d1d4db)
  border solid 1px
  border-color  #bec3cf #c4c7cd #bec3cf #d8dbe1
  border-top-style none
  color #8991a2
  &:first-child
    border-left none

.days
  display flex
  flex-grow 1
  flex-direction column
  background #e5e5e5

.week
  display flex
  flex-direction row
  flex-grow 1

  &:first-child
    .day
      margin-top 0
      border-top solid 1px #FFF

  &:last-child
    .day:first-child
      border-radius 0 0 0 3px
    .day:last-child
      border-radius 0 0 3px 0

.day
  position relative
  flex: 1 0 0
  margin 1px 1px 0 0
  box-sizing border-box
  padding 8px
  background #FFF

  &:last-child
    margin-right 0

  &__active_false
    background #f7f7f7

  &__current_true
    background #fffff4
    box-shadow inset 0 0 5px rgba(#003, .11)

.date
  font: bold 14px Helvetica, Arial, sans-serif
  position absolute
  top 9px
  right 8px
  text-align right
  color #000

.events-counter
  font 12px Verdana, sans-serif
  margin 0
  color #bbb

.events
  position absolute
  top: 30px
  left 8px
  right 8px
  bottom 8px
  overflow hidden

  &::after
    content ""
    position absolute
    bottom 0
    left 0
    right 0
    height 5px
    background-image -webkit-linear-gradient(top, rgba(#FFF,0), #FFF)

.event
  font 12px "Geneva CY", Geneva, sans-serif
  margin-bottom: 7px
  padding 1px 7px 3px
  background-color #7793d0
  background-image -webkit-linear-gradient(top, #7793d0 0%, #7793d0 50%, #728dc5 50%, #728dc5 100%)
  border-radius 3px

.eventTitle
  margin-right 10px
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  text-shadow 0 1px 1px #FFF
  background #333
  -webkit-background-clip: text
  background-clip: text
  color transparent

.dayPopup
  position absolute
  z-index 10
  left 100%
  border solid 1px #999
  border-radius 2px

